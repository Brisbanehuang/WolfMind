# 狼人杀游戏配置文件示例
# 复制此文件为 .env 并填入你的实际配置

# ==================== API 配置 ====================

# DashScope API Key (阿里云通义千问)
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# OpenAI 兼容 API 配置 (如智谱AI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://open.bigmodel.cn/api/paas/v4/
OPENAI_MODEL_NAME=glm-4.5-air

# Ollama 配置 (本地模型)
OLLAMA_MODEL_NAME=qwen2.5:1.5b

# ==================== 模型选择 ====================
# 可选值: dashscope, openai, ollama
MODEL_PROVIDER=dashscope

# ==================== 游戏配置 ====================

# 游戏语言 (zh: 中文, en: 英文)
GAME_LANGUAGE=zh

# 最大游戏轮数
MAX_GAME_ROUND=30

# 每个狼人的最大讨论轮数
MAX_DISCUSSION_ROUND=3

# ==================== AgentScope Studio 配置 ====================

# 是否启用 Studio 可视化
ENABLE_STUDIO=false

# Studio URL
STUDIO_URL=http://localhost:3001

# 项目名称
STUDIO_PROJECT=werewolf_game

# ==================== 检查点配置 ====================

# 检查点保存目录
CHECKPOINT_DIR=./checkpoints

# 检查点文件名
CHECKPOINT_ID=players_checkpoint
